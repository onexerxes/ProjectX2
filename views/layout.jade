doctype 5

html(lang="en")
  head
    title= title

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-theme.min.css')    

  body

    div(class="navbar navbar-inverse", role="navigation") 
        div.container
            div.navbar-header
                a.navbar-brand #{title}

    div.container
        block content


    // include default scripts and any view scripts
    script(src='/javascripts/jquery/jquery-1.8.3.min.js')    
    script(src='/javascripts/bootstrap/bootstrap.min.js')    